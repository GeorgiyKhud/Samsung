// Подключаем библиотеки:
#include <Wire.h>                                     // подключаем библиотеку для работы с шиной I2C
#include <iarduino_I2C_connect.h>                     // подключаем библиотеку для соединения arduino по шине I2C
// Объявляем переменные и константы:
iarduino_I2C_connect I2C2;                            // объявляем переменную для работы c библиотекой iarduino_I2C_connect
const byte           PIN_Button = 12;                  // объявляем константу с указанием номера цифрового вывода, к которому подключена кнопка
      byte           REG_Array[2];                    // объявляем массив, данные которого будут доступны для чтения/записи по шине I2C
void setup(){
//Wire.setClock(400000);                              // устанавливаем скорость передачи данных по шине I2C = 400кБит/с
  Wire.begin(0x01);                                   // инициируем подключение к шине I2C в качестве ведомого (slave) устройства, с указанием своего адреса на шине.
  I2C2.begin(REG_Array);                              // инициируем возможность чтения/записи данных по шине I2C, из/в указываемый массив
  pinMode(PIN_Button, INPUT_PULLUP);  
  Serial.begin(115200);// Устанавливаем режим работы вывода кнопки, как вход
}
void loop(){
  REG_Array[1] = !digitalRead(PIN_Button); 
  // Сохраняем состояние кнопки в 0 ячейку массива REG_Massive
  Serial.print(REG_Array[0]);
  Serial.print("   ");
  Serial.println(REG_Array[1]);
  delay(1000);
}
